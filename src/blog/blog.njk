---
permalink: /blog/
eleventyNavigation:
    key: Blog
    order: 1
eleventyImport:
    collections: ["posts"]
---
{% extends "layouts/base.njk" %}

{% block content %}
    <section class="section">
        <div class="container container--vertical">
            <ul>
                {% for post in collections.posts %}
                    <li>
                        <a href="{{ post.url }}">{{ post.date }} {{ post.data.title }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </section>
{% endblock %}
