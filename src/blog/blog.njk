---
permalink: /blog/
eleventyNavigation:
    key: Blog
    order: 1
eleventyImport:
    collections: ["posts"]
---
{% extends "layouts/base.njk" %}

{% block content %}
    <section class="section">
        <div class="container container--vertical">
            <ol class="posts-list">
                {% for post in collections.posts | reverse %}
                    <li class="posts-list__item">
                        <article class="posts-list__article">
                            <h2 class="posts-list__title">
                                <a class="posts-list__link" href="{{ post.url }}">{{ post.data.title }}</a>
                            </h2>
                            <time class="posts-list__date" datetime="{{ post.date | htmlDate }} ">{{ post.date | readableDate }} </time>
                            <p class="posts-list__description">{{ post.data.description }}</p>
                        </article>
                    </li>
                {% endfor %}
            </ol>
        </div>
    </section>
{% endblock %}
